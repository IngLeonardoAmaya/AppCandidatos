@model AppCandidatos.Models.ViewModels.CandidateViewModel
@{
    ViewData["Title"] = "Crear Candidato";
}

<h2>Crear Nuevo Candidato</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Surname"></label>
        <input asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Birthdate"></label>
        <input asp-for="Birthdate" class="form-control" type="date" />
        <span asp-validation-for="Birthdate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <h4>Experiencias Profesionales</h4>

    <div id="experiences">
        @for (int i = 0; i < Model.CandidateExperiences.Count; i++)
        {
            <div class="form-group">
                <label asp-for="CandidateExperiences[i].Company"></label>
                <input asp-for="CandidateExperiences[i].Company" class="form-control" />
                <span asp-validation-for="CandidateExperiences[i].Company" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CandidateExperiences[i].Job"></label>
                <input asp-for="CandidateExperiences[i].Job" class="form-control" />
                <span asp-validation-for="CandidateExperiences[i].Job" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CandidateExperiences[i].Salary"></label>
                <input asp-for="CandidateExperiences[i].Salary" class="form-control" />
                <span asp-validation-for="CandidateExperiences[i].Salary" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CandidateExperiences[i].BeginDate"></label>
                <input asp-for="CandidateExperiences[i].BeginDate" class="form-control" type="date" />
                <span asp-validation-for="CandidateExperiences[i].BeginDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CandidateExperiences[i].EndDate"></label>
                <input asp-for="CandidateExperiences[i].EndDate" class="form-control" type="date" />
                <span asp-validation-for="CandidateExperiences[i].EndDate" class="text-danger"></span>
            </div>
        }
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

